{% assign coffee_capsule_collection = 'coffee-capsules' %}
{% assign capsule-collection = collections[coffee_capsule_collection] %}

{% assign coffee_machine_collection = 'coffee-machines' %}
{% assign machine-collection = collections[coffee_machine_collection] %}

{% assign coffee_bestseller_collection = 'best-sellers' %}
{% assign bestseller-collection = collections[coffee_bestseller_collection] %}

{% assign ground_coffee_collection = 'ground-coffee' %}
{% assign ground-coffee-collection = collections[ground_coffee_collection] %}

<div class="main-div container multi-tabs-wrapper container">
    <div class="main-div-inside">
        <h2>Must Try!</h2>
        <div class="multi-tabs">
            <div class="tabs-primary">
                <div class="best-rated collection-click active" id="1">
                    <h3>Best Rated</h3>
                </div>
                <div class="coffee-capsules collection-click" id="2">
                    <h3>Capsules</h3>
                </div>
                <div class="coffee-machines collection-click" id="3">
                    <h3>Machines</h3>
                </div>
                <div class="merch collection-click" id="4">
                    <h3>Ground Coffee</h3>
                </div>
            </div>
            <div class="tabs-secondary">
                <div class="best-rated-view-wrapper collection-show relative" id="show-1">
                    <div class="best-rated-view  scroll-slider-wrapper">
                        <div class="prod-card">
                          {% if bestseller-collection %}
                            {% for product in bestseller-collection.products limit:3 %}
                              {% render 'product-card-grid-list', product: product %}
                            {% endfor %}
                          {% else %}
                            <p>The collection "{{ collection_handle }}" does not exist.</p>
                          {% endif %}
                        </div>

<style>
  .grind_guide_btn_new {
    background: #f2ae00;
    border-radius: 50px;
    padding: 5px 15px;
    color: #333;
    text-align: center;
    max-width: fit-content;
    font-size: 13px;
    font-weight: bold;
    text-transform: uppercase;
    display: flex;
    justify-content: space-between;
    cursor: pointer;
    font-weight:500;
}
.label_wrap {
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.grind_guide_btn_new img {
    padding-left: 5px;
}
.option-selector__btns.option-selector__btns_img label {
    background-size: cover !IMPORTANT;
    background-repeat: no-repeat;
    width: 100%;
    height: 75px !important;
    border-radius: 5px;
    display: inline-block;
    margin: 0;
}
.picker_wrap_custom {
    position: relative;
    text-align: center;
    margin-top: 15px;
    margin-right: 10px;
    /* width: calc(25% - 10px); */
    border: 1px solid #eee;
    border-radius: 5px;
    box-shadow: 0px 1px 5px rgb(0 0 0 / 9%);
}
span.picker_caption {
        display: block;
    text-align: center;
    font-size: 13px;
    font-weight: 700;
    max-width: 100%;
    line-height: 15px;
    margin: 0 !important;
    padding: 10px 0px 7px 0px;
}
 .picker_wrap_custom .opt-btn:checked+.opt-label{position:relative;}
 .picker_wrap_custom .opt-btn:checked+.opt-label:after {
    width: 30px;
    height: 30px;
    position: absolute;
    z-index: 9;
    /* background: red; */
    content: '';
    left: 0;
    right: 0;
    margin: 0 auto;
    top: 50%;
    transform: translateY(-50%);
    background: url(https://cdn.shopify.com/s/files/1/0069/2446/8314/t/31/assets/tick.png?v=1660817422);
    background-repeat: no-repeat;
}
.option-selector__btns {
    margin-right: -10px;
}
  .picker_wrap_custom .is-unavailable+.opt-label:after {
    border-top: 2px solid #fff !important;
    opacity:1 !important;
}
  .picker_wrap_custom .opt-btn:checked+.opt-label {
    border: 2px solid #f2ae00 !important;
}
</style>
